SELECT 
    MD.ResourceID,
    RS.Name0 AS 'Device Name',
    RU.User_Name0 AS 'User Name',
    RU.User_Principal_Name0 AS 'Email',
    MD.DeviceID0,
    MD.DiagonalSize0,
    MD.Manufacturer0,
    MD.ManufacturingWeek0,
    MD.ManufacturingYear0,
    MD.TimeStamp
FROM 
    v_GS_MONITORDETAILS AS MD
JOIN 
    v_R_System AS RS ON MD.ResourceID = RS.ResourceID
JOIN 
    v_RA_User_UserGroupName AS RUUGN ON MD.ResourceID = RUUGN.ResourceID
JOIN 
    v_R_User AS RU ON RUUGN.User_Name0 = RU.User_Name0
ORDER BY 
    MD.ResourceID, MD.TimeStamp;
