Select 
    d.Name0 As HostName,
    u.Full_User_Name0 As UserName,
    u.Mail0 As Email,
    d.is_assigned_to_user0 As IsAssigned,
    VMD.ResourceID,
    VMD.DiagonalSize0,
    VMD.ManufacturingWeek0,
    VMD.ManufacturingYear0,
    VMD.Name0,
    VMD.SerialNumber0,
    CASE 
        WHEN VMD.Manufacturer0 = 'SAM' THEN 'Samsung'
        WHEN VMD.Manufacturer0 = 'HP' THEN 'HP'
        WHEN VMD.Manufacturer0 = 'DEL' THEN 'Dell'
        WHEN VMD.Manufacturer0 = 'BVS' THEN 'ASUS'
        WHEN VMD.Manufacturer0 = 'AOC' THEN 'ViewSonic'
        WHEN VMD.Manufacturer0 = 'Len' THEN 'Lenovo'
        ELSE VMD.Manufacturer0
    END AS Manufacturer0
From v_GS_MONITORDETAILS VMD
--Join v_FullCollectionMembership fcm on VMD.ResourceID = fcm.ResourceID
Join v_R_System d on VMD.ResourceID = d.ResourceID
Join V_R_user u on d.User_Name0 = u.User_Name0
Where VMD.Name0 = 'CitrixMonitor'
Order by VMD.Timestamp
